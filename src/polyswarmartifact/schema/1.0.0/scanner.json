{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../1.0.0/scanner.json",
    "type": "object",
    "properties": {
        "version": {
            "type":  "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "malware_family": {"type": "string"},
        "domains": {
            "type": ["array", "null"],
            "items": {"type": "string"},
            "minItems": 0
        },
        "ip_addresses": {
            "type": ["array", "null"],
            "items": {"type": "string"},
            "minItems": 0
        },
        "stix_signatures": {
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "schema": {"type": "string"},
                    "signature": {"type": "object"}
                }
            }
        },
        "microengine_info": {
            "type": "object",
            "properties": {
                "polyswarmclient_version": {
                    "type": ["string", "null"],
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "microengine_version": {
                    "type": ["string", "null"],
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "vendor_version": {"type": ["string", "null"]},
                "signatures_version": {"type": ["string", "null"]},
                "environment": {
                    "type": "object",
                    "properties": {
                        "operating_system": {"type": "string"},
                        "architecture": {"type": "string"}
                    },
                    "required": ["operating_system", "architecture"]
                }
            },
            "required": ["environment"]
        }
    },
    "required": ["malware_family", "microengine_info", "version"]
}
