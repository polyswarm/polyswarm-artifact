{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "bounty.json",
    "definitions": {
        "file": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "filename": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "filesize": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "mimetype": {
                        "type": "string"
                    },
                    "sha256": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "sha1": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "md5": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                },
                "additionalProperties": true,
                "required": [
                    "mimetype"
                ]
            }
        },
        "url": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "protocol": {"type": "string"}
                },
                "additionalProperties": true,
                "required": ["protocol"]
            }
        }
    },
    "type": "array",
    "oneOf": [
            {
                "$ref": "#/definitions/file"
            },
            {
                "$ref": "#/definitions/url"
            }
        ]
}
