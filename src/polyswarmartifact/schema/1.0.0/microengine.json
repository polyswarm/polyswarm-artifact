{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../1.0.0/microengine.json",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "metadata": {
            "type": "array",
            "minItems": 1,
            "maxItems": 256,
            "items": {"$ref": "./scanner.json"}
        }
    },
    "required": ["version", "metadata"]
}
