{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "../schema/verdict.json",
    "type": "object",
    "properties": {
        "malware_family": {"type": "string"},
        "domains": {
            "type": ["array", "null"],
            "items": {
                "type": "string",
                "format": "uri"
            },
            "minItems": 0
        },
        "ip_addresses": {
            "type": ["array", "null"],
            "items": {
                "type": "string",
                "format": "ipv4"
            },
            "minItems": 0
        },
        "stix_signatures": {
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "schema": {"type": ["string", "null"]},
                    "signature": {"type": ["object", "string", "null"]}
                },
                "additionalItems": true
            }
        },
        "scanner": {
            "type": ["object", "null"],
            "properties": {
                "version": {
                    "type": ["string", "null"],
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "polyswarmclient_version": {
                    "type": ["string", "null"],
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "vendor_version": {"type": ["string", "null"]},
                "signatures_version": {"type": ["string", "null"]},
                "environment": {
                    "type": ["object", "null"],
                    "properties": {
                        "operating_system": {"type": ["string", "null"]},
                        "architecture": {"type": ["string", "null"]}
                    }
                }
            },
            "additionalItems": true
        }
    },
    "additionalItems": true,
    "required": ["malware_family"]
}
